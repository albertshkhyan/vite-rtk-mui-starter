{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./src",
    "paths": {
      "@app": ["app"],
      "@app/*": ["app/*"],
      "@assets": ["assets"],
      "@assets/*": ["assets/*"],
      "@pages": ["pages"],
      "@pages/*": ["pages/*"],
      "@routes": ["routes"],
      "@routes/*": ["routes/*"],
      "@modules": ["modules"],
      "@modules/*": ["modules/*"],
      "@components/*": ["components/*"],
      "@components": ["components"],
      "@config/*": ["config/*"],
      "@config": ["config"],
      "@reduxjs/toolkit/*": ["../node_modules/@reduxjs/toolkit/dist/*"]

    }
  },
  "include": ["src/**/*"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
